@model List<FamiliBudget.App.Application.BudgetViewModel>

<div class="row">
	<div class="col">
		<h1>Your budgets</h1>
		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Income</th>
					<th>Expenses</th>
					<th>Balance</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@item.Income</td>
						<td>@(item.Expenses.Count) - @(item.Expenses.Sum(e => e.Value))</td>
						<td>@(item.Income - item.Expenses.Sum(e => e.Value))</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
</div>